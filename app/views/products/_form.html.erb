<%= form_for @product do |f| %>
  <%# render "shared/errors", object: @product %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="container">
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'editor_title form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :price %>
      <%= f.text_field :price, class: 'form-control'  %>
    </div>

    <div class="form-group">
      <%= f.label :result %>
      <%= f.text_field :result, class: 'form-control'  %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.trix_editor :description, class: 'editor form-control'  %>
    </div>

    <span class="picture">
      <%= f.file_field :pictures, multiple: true, accept: 'image/jpeg,image/gif,image/png' %>
    </span>

  <div>
    <%= f.label :published %>
    <%= f.check_box :published %>
  </div>

  <p></p>

    <div class="form-group">
      <%= f.submit 'Save', class: 'btn btn-success' %>
      <%= link_to "Back", :back, class: "btn btn-outline-secondary" %>
    </div>
  </div>
<% end %>

<script type="text/javascript">
  $('#product_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>
