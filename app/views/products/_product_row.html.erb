<div class="well">

  <div class="row">
    <div class="col-xs-8">
      <h4><small><%= product.title %></small></h4>
      <h4><small><%= product.price %></small></h4>
      <h4><small><%= product.result %></small></h4>
      div class="col-md-4 show_milti_image">

        <% product.pictures.each do |i| %>
            <%= image_tag i.url(:thumb), id: "myImg" %>
        <% end %>
      </div>
    </div>
    <div class="col-xs-4">

      <%= form_for order_item, remote: true do |f| %>
      <h4 class="text-right">Unit Price: <span style="color: green"><%= number_to_currency product.price %></span></h4>
        <div class="input-group">
          <%= f.number_field :quantity, value: 1, class: "form-control", min: 1 %>
          <div class="input-group-btn">
            <%= f.hidden_field :product_id, value: product.id %>
            <%= f.submit "Add to Cart", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>
